{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "vllm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Provision",
      "options": {
        "baseURL": "{env:API_BASEURL}",
        "apiKey": "{env:API_KEY}"
      },
      "models": {
        "gpt-oss": {
          "name": "gpt-oss",
          "limit": {
            "context": 131000,
            "output": 16384
          }
        }
      }
    }
  },
  "share": "disabled",
  "autoupdate": true,
  "enabled_providers": ["vllm"],
  "model": "vllm/gpt-oss"
}